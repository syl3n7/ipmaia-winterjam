# IMPORTANT: Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to git!

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=winterjam
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here

# Application URLs
FRONTEND_URL=http://your-domain.com
NEXT_PUBLIC_API_URL=http://your-domain.com/api

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_256_bits
SESSION_SECRET=your_very_long_and_secure_session_secret_here

# Admin Account
ADMIN_EMAIL=admin@ipmaia.pt
ADMIN_PASSWORD=your_secure_admin_password_here

# Optional: SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Node Environment
NODE_ENV=production